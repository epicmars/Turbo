<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidpi.turbo">

    <!-- 悬浮窗 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application>
        <activity
            android:name=".TurboActivity"
            android:label="@string/title_activity_turbo"
            android:theme="@style/AppTheme.NoActionBar"
            android:icon="@mipmap/ic_turbo_launcher"
            android:roundIcon="@mipmap/ic_turbo_launcher_round">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".service.TurboService">
            <intent-filter>
                <action android:name="com.androidpi.turbo.service.TurboService"/>
            </intent-filter>
        </service>
        <service android:name=".service.ProfileService">
            <intent-filter>
                <action android:name="com.androidpi.turbo.service.ProfileService"/>
            </intent-filter>
        </service>
    </application>

</manifest>